{
  "name": "calendar-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build --no-lint",
    "start": "next start",
    "lint": "eslint",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate",
    "dev:with-cron": "concurrently \"npm run dev\" \"sleep 10 && npm run cron:local\"",
    "dev:realtime": "concurrently \"npm run dev\" \"sleep 10 && npm run cron:realtime\"",
    "cron:local": "node scripts/cron-local.js",
    "cron:realtime": "curl -X POST http://localhost:3000/api/cron/start -H 'Content-Type: application/json' -d '{\"intervalSeconds\": 30}'",
    "cron:send": "curl -X POST http://localhost:3000/api/reminders/send"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@marsidev/react-turnstile": "^1.3.1",
    "@next-auth/prisma-adapter": "1.0.7",
    "@prisma/client": "^5.22.0",
    "@types/nodemailer": "^6.4.13",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.460.0",
    "next": "15.5.4",
    "next-auth": "4.24.11",
    "nodemailer": "6.9.10",
    "prisma": "^5.22.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.53.2",
    "tailwind-merge": "^2.5.4",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}
